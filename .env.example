# MC Fun — Environment Variables
# Copy to .env and fill in values: cp .env.example .env

# Minecraft server (RCON)
RCON_HOST=              # Container IP — run: bin/mc status
RCON_PORT=25575
RCON_PASSWORD=mc-fun-rcon

# Minecraft server (bot connections)
MC_HOST=                # Same as RCON_HOST
MC_PORT=25565

# LLM (Groq)
GROQ_API_KEY=           # Starts with gsk_

# Postgres (future event store)
DATABASE_URL=           # postgres://mc_fun:mc_fun@<ip>:5432/mc_fun — run: bin/mc status
